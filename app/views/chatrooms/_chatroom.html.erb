<div id="<%= dom_id chatroom %>">
  <p>
    <strong>Name:</strong>
    <%= chatroom.name %>
  </p>
  <div data-behavior="messages">
    <% @chatroom.instant_messages.order(created_at: :asc).limit(100).each do |mssge| %>
      <div>
        <strong><%= mssge.user.first_name%>:</strong>
        <%= mssge.body %>
      </div>
    <% end %>
  </div>

  <turbo-frame id="new_message_frame">
    <%= form_for [@chatroom, InstantMessage.new], remote: true do |f| %>
      <%= f.text_area :body, rows: 1, autofocus: true %>
    <% end %>
  </turbo-frame>


</div>
