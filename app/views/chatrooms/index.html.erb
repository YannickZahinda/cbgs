<p style="color: green"><%= notice %></p>

<div class="fluid-container">
  <div class="row">
    <div class="col-sm-3">
     <% if user_signed_in? %>
       <h5>User Chatrooms</h5>
       <ul>
         <% current_user.chatrooms.each do |chatroom| %>
           <li><%=link_to chatroom.name, chatroom %></li>
         <%end%>
       </ul>
     <% end %>
    </div>
     
          <h1>ChatRooms</h1>
          <div class="col-sm-10">
             <table>
               <thead>
                 <tr>
                   <th>Name</th>
                   <th colspan="3"></th>
                 </tr>
               </thead>
               <tbody>
                 <% @chatrooms.each do |chatroom| %>
                   <tr>
                     <td><%= chatroom.name %></td>
                     <td><%= link_to "Show", chatroom %></td>
                     <td><%= link_to "Edit", edit_chatroom_path(chatroom) %></td>
                     <td><%= button_to "Destroy", chatroom, method: :delete, data: {confirm: 'Are you sure ?'} %></td>
                     <td class='d-flex'>
                       <%= form_with(model: chatroom, url: chatroom_chatroom_users_path(chatroom), method: :post) do |form| %>
                          <%= form.submit "Join", class: 'mx-2' %>
                       <% end %>
                       <%= form_with(model: chatroom, url: chatroom_chatroom_users_path(chatroom), method: :delete) do |form| %>
                          <%= form.submit "Live" %>
                       <% end %>
                     </td>
                   </tr>
                 <% end %>
               </tbody>
             </table>
          </div>
  </div>
</div>