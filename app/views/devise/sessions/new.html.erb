<div class="authentication">
    <div class = "signup">
      <div class="form">
       <h3>Log in</h3><br/>
       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :email, :class => "label"  %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input" %>
          </div>
        
          <div class="field">
            <%= f.label :password, :class => "label"  %><br />
            <%= f.password_field :password, autocomplete: "current-password", :class => "input" %>
          </div> <br/>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" , :class => "button"%>
          </div>
          <div class="loginline">
            <div>__________</div><strong> OR </strong>
            <div> _________</div>
          </div>
          <div><%= render "devise/shared/links"%></div>
       <% end %>
      </div> 
    </div>
    <div class="loginpic">
      <%= image_tag("logos/login.png", width: '100%') %>
    </div>
</div>
