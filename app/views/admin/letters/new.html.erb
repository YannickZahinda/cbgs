<h1>Envoyer une lettre</h1>

<%= form_with(model: @letter, url: admin_letters_path, method: :post, class: "message-form") do |f| %>
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <div class="form-group">
    <%= f.label :id_du_destinataire, class: "form-label" %>
    <%= f.text_field :recipient_id, class: "form-control", placeholder: "Entrer l'ID du destinataire", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :subjet, class: "form-label" %>
    <%= f.text_field :subject, class: "form-control", placeholder: "Taper le subject", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :nom_du_parent_destinataire, class: "form-label" %>
    <%= f.text_field :nom_du_parent_destinataire, class: "form-control", placeholder: "Entrer le nom du parent destinataire", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :corps_de_la_lettre, class: "form-label" %>
    <%= f.text_area :body, class: "form-control", placeholder: "Enter message", required: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Send", class: "btn btn-primary" %>
  </div>
<% end %>
