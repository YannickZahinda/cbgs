<div class="dashboard dashboardcommuniques">
  <p style="color: green"><%= notice %></p>
  
  <h1 style="margin: auto; width: 30%">Communiques</h1><br/>
  <% @communiques.each do |communique| %>
    <div class="communique">
      <h2><%= communique.titre %></h2><br/>
      <p><%= communique.description %></p>
      <p>
        <%= link_to "Voir", communique %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New communique", new_admin_communique_path %>

