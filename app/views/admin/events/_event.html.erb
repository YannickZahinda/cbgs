<div id="<%= dom_id event %>">
  <!-- Show page -->
<div class="card" style="border: 1px solid #ccc; border-radius: 4px; margin-bottom: 20px;">
  <div class="card-body">
    <h3 class="card-title"><%= event.title %></h3><br/>
    <h5 class="card-subtitle mb-2 text-muted"><%= event.date %></h5>
    <p class="card-text"><%= event.description %></p>
    <%= link_to 'Modifier', edit_admin_event_path(event), class: 'btn btn-primary' %>
    <%= link_to 'Effacer', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <%= link_to "Retour aux événements", admin_events_path, class: 'btn btn-primary' %>
  </div>
</div>
</div>
