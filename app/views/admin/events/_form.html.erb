<div class="signup">

<%= form_with(model: [:admin, event], local: true, data: { turbo: :false }) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" , class: 'label' %>
    <%= form.date_field :date, class: 'input' %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" , class: 'label' %>
    <%= form.text_field :title , class: 'input'%>
  </div>
  <div class="form-group">
     <p>Ajouter un fichier</p>
    <%= form.file_field :document, class: 'input'%>
  </div>

  <div>
    <%= form.label :description, style: "display: block" , class: 'label' %>
    <%= form.text_area :description, class: 'input' %>
  </div>

  <div>
   
    <p>Ajouter une image</p>
    <%= form.file_field :image, class: 'input'%>
  </div>

  <div>
    <%= form.submit class: 'button'  %>
  </div>
<% end %>
 </div>