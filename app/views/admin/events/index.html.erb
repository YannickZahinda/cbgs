<p style="color: green"><%= notice %></p>
<!-- Index page -->
<% @events.each do |event| %>
  <div class="card" style="border: 1px solid #ccc; border-radius: 4px; margin-bottom: 20px;">
    <div class="card-body">
      <h5 class="card-title"><%= event.title %></h5>
      <p class="card-text"><%= event.description %></p>
      <%= link_to 'Show', admin_event_path(event), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>


