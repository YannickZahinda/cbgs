<p style="color: green"><%= notice %></p>
<div style="margin: 40px">
<h2>Événements</h2> <br/>
<%= link_to '<< Tableau de bord ', admin_home_index_path, class: 'btn btn-primary', style: "margin-bottom: 10px"%><br/>
<% @events.each do |event| %>
  <div class="card" style="border: 1px solid #ccc; border-radius: 4px; margin-bottom: 20px;">
    <div class="card-body">
      <h3 class="card-title"><%= event.title %></h3>
      <p class="card-text"><%= event.description %></p>
      <%= link_to 'Show', admin_event_path(event), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

</div>
