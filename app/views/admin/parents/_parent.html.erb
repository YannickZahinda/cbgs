<div id="<%= dom_id parent %>" class="teacher-card">
  <div class="teacher-card__header">
    <h2 class="teacher-card__title"><%= parent.nom_complet %></h2>
  </div>
  <div class="teacher-card__content">
    <div class="teacher-card__details">
      <div class="teacher-card__detail">
        <strong>Addresse:</strong>
        <%= parent.addresse %>
      </div>
      <div class="teacher-card__detail">
        <strong>Telephone:</strong>
        <%= parent.phone %>
      </div>
      <div class="teacher-card__detail">
        <strong>Email:</strong>
        <%= parent.email %>
      </div>
      <div class="teacher-card__detail">
        <strong>Date de création:</strong>
        <%= parent.created_at %>
      </div>
    </div>
    <div class="teacher-card__actions">
      <p><%= link_to "Modifier", edit_admin_parent_path(parent), class: "button button--primary" %></p>
      <p><%= link_to "Retour aux parents", admin_parents_path, class: "button button--secondary" %></p>
      <p><%= button_to "Effacer", admin_parent_path(parent), method: :delete, data: { confirm: "Êtes-vous sûr?" }, class: "button button--danger" %></p>
    </div>
  </div>
</div>
